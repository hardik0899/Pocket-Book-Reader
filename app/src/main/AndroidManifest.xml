<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pocketbookapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_books"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".search.SearchActivity" />
        <activity
            android:name=".BookViewFragment"
            android:label="@string/title_activity_book_view" />
        <activity android:name=".AuthorViewFragment" />
        <activity
            android:name=".LandingPageFragment"
            android:label="@string/landing_page_title"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>